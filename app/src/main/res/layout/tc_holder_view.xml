<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="226.66dp"
        android:layout_height="226.66dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/tc_recycler_imageView"
            android:layout_width="226.66dp"
            android:layout_height="226.66dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="226.66dp"
            android:layout_height="43.33dp"
            android:layout_alignParentBottom="true"
            android:background="@color/poddarkgray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tc_recycler_textView"
            android:layout_width="226.66dp"
            android:layout_height="43.33dp"
            android:layout_alignParentBottom="true"
            android:fontFamily="extra bold"
            android:textColor="@color/exo_white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/iv_Pc_Heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-20dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/music_ico_heart_off"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />





    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>

